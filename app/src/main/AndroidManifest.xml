<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.qfpay.push"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <!--<permission android:name="com.qfpay.permission.PUSHCORE"/>-->
    <!--<uses-permission android:name="com.qfpay.permission.PUSHCORE"/>-->
    <application
        android:name="com.qfpay.push.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.qfpay.push.ChatClientActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.qfpay.push.SettingActivity"
            />

        <service
            android:name="com.qfpay.push.WebSocketService"
            android:exported="true"
            android:process=":remote"
            >
            <intent-filter>
                <action android:name="org.websocket.demo.WebSocketService">
                </action>
            </intent-filter>
        </service>

        <service
            android:name="com.gprinter.service.GpPrintService"
            android:enabled="true"
            android:exported="true"
            android:label="GpPrintService"
            android:process=":remote"
            >
            <intent-filter>
                <action android:name="com.gprinter.aidl.GpPrintService"/>
            </intent-filter>
        </service>

        <service
            android:name="com.qfpay.push.WebSocketService$DaemonInnerService"
            android:exported="true"
            android:process=":remote"
            >
        </service>

        <meta-data
            android:name="app_type"
            android:value="@string/app_type" />
        <meta-data
            android:name="secret_key"
            android:value="@string/secret_key" />
    </application>

</manifest>
